<!DOCTYPE suite SYSTEM "http:\\testng.org/testng-1.0.dtd" >

<suite name ="Calculator" parallel="true" thread-count="2">
    <test name="MultTest">
        <parameter name="a" value="80" />
        <parameter name="b" value="-40" />
        <parameter name="expected" value="-3200" />
        <classes>
            <class name="com.epam.tat.module4.test.runner.LongMultCalculatorTest" />
            <class name="com.epam.tat.module4.test.runner.DoubleMultCalculatorTest" />
        </classes>
    </test>

    <test name="LongTest">
        <parameter name="a" value="80" />
        <parameter name="b" value="-40" />
        <parameter name="expected" value="-3200" />
        <groups>
            <run>
                <include name="long" />
                <exclude name="double" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.tat.module4.test.runner.LongMultCalculatorTest" />
            <class name="com.epam.tat.module4.test.runner.DoubleMultCalculatorTest" />
            <class name="com.epam.tat.module4.test.runner.DoubleDivCalculatorTest" />
        </classes>
    </test>

    <test name="DoubleTest">
        <parameter name="a" value="80" />
        <parameter name="b" value="-40" />
        <parameter name="expected" value="-3200" />
        <groups>
            <run>
                <include name="double" />
                <exclude name="long" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.tat.module4.test.runner.LongMultCalculatorTest" />
            <class name="com.epam.tat.module4.test.runner.DoubleMultCalculatorTest" />
            <class name="com.epam.tat.module4.test.runner.DoubleDivCalculatorTest" />
        </classes>
    </test>
</suite>